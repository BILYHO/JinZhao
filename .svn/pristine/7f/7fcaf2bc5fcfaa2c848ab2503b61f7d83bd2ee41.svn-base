@import "../static/scss/common";

.login {
  position: fixed;
  width: 100%;
  height: 100%;
  line-height: 100%;
  background: #1F2D3D;
  text-align: center;
  .login_box {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    width: 500px;
    height: 300px;
    margin: auto;
    border-radius: 20px;
    background-color: #fff;
    box-shadow: 10px 10px 10px #888;
    dl {
      margin-top: 30px;

      font-size: 20px;
      dt {
        margin-bottom: 20px;
        text-align: center;
      }
      dd {
        position: relative;
        text-align: left;
        overflow: hidden;
        margin-bottom: 20px;
        span {
          margin-left: 80px;
          width: 16%;
          display: inline-block;
        }
        > div {
          position: relative;
          padding: 0 5px;
          box-sizing: border-box;
          width: 250px;
          height: 30px;
          display: inline-block;
          border: 1px solid #eee;
          background: none;
          border-radius: 5px;
          input {
            width: 100%;
            height: 100%;
            border: none;
            background: none;
            font-size: 16px;
          }
        }
        .getcode {
          width: 130px;
        }
        .code_pic {
          margin: 0;
          position: absolute;
          right: 96px;
          top: 0;
          display: inline-block;
          width: 20%;
          height: 30px;
          line-height: 30px;
          color: #fff;
          background-color: #1F2D3D;
          border-radius: 5px;
          text-align: center;
          transition: all 500ms linear;
        }
      }
    }
    .btn {
      margin: 0 auto 20px;
      width: 200px;
      height: 40px;
      line-height: 40px;
      text-align: center;
      background: #1F2D3D;
      color: #fff;
      border-radius: 10px;
      cursor: pointer;
      &:active {
        opacity: .9;
      }
    }
    .forget {
      display: inline-block;
      padding-bottom: 3px;
      cursor: pointer;
      color: red;
      &:hover {
        border-bottom: 1px solid red;
      }
    }
  }
}
