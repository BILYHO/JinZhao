@import "../static/scss/common";

.login {
  position: fixed;
  width: 100%;
  height: 100%;
  line-height: 100%;
  background: #1F2D3D;
  text-align: center;
  .login_box {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    width: 500px;
    height: 300px;
    margin: auto;
    border-radius: 20px;
    background-color: #fff;
    box-shadow: 10px 10px 10px #888;
    dl{
      margin-top: 30px;
      text-align: center;
      font-size: 20px;
    }
  }
}
